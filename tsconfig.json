{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "test/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
