{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "useDefineForClassFields": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@test/*": [
                "test/*"
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.vue"
    ]
}
