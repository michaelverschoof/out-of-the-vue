{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "strict": true,
        "strictNullChecks": false,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "useDefineForClassFields": true,
        "types": ["node", "vue", "vitest/globals", "vite/client"],
        "paths": {
            "@/*": ["src/*"],
            "@test/*": ["test/*"]
        },
        "lib": ["esnext", "dom"],
        "skipLibCheck": true
    },
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "exclude": ["node_modules", "src/**/*.story.vue"]
}
